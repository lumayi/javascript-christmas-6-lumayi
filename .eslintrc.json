{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", { "max": 15 }]
  },
  "ignorePatterns": ["__tests__/*.js"]
}
